<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        tools:context="javiercastro.financialcalculator.InputActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/input_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_amount"
            android:text="@string/input_loan"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_below="@+id/input_title"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:id="@+id/text_loanAmount"
            android:layout_below="@id/text_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/green_bg2"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_interest"
            android:text="@string/input_interest"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_below="@+id/text_loanAmount"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:id="@+id/out_interest"
            android:layout_below="@id/text_interest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_bg2"
            android:textSize="25sp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_payoffdate"
            android:text="@string/input_term"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_below="@+id/out_interest"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/out_payOffDate"
            android:layout_below="@id/text_payoffdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_bg2"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:inputType="number"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_date"
            android:text="@string/input_date"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_below="@+id/out_payOffDate"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:id="@+id/input_date_d"
            android:layout_below="@id/text_date"
            android:layout_centerHorizontal="true"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_bg2"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_selectDate"
            android:layout_below="@+id/input_date_d"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/date_button_effect"
            android:onClick="datePicker"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_continue"
            android:layout_below="@+id/button_selectDate"
            android:background="@drawable/continue_button_effect"
          />

    </RelativeLayout>
</ScrollView>
